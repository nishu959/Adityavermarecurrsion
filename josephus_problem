class Solution:
    def findTheWinner(self, n: int, k: int) -> int:
        l = []
        def fun(l,k,ci):
            global ans
            if len(l)==1:
                ans = l[0]
                return ans
            ci = (ci+k)%len(l) 
            l.remove(l[ci])
            fun(l,k,ci)
            return
        
        for i in range(1,n+1):
            l.append(i)
        fun(l,k-1,0)
        return ans
